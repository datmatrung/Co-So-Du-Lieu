CREATE TABLE [dbo].[LoaiSP](
	[TenLoai] [nvarchar](50) NULL,
	[MaLoai] [int] NOT NULL,
 CONSTRAINT [PK_LoaiSP] PRIMARY KEY CLUSTERED 
(
	[MaLoai] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON) ON [PRIMARY]
) ON [PRIMARY]
GO
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE TABLE [dbo].[SanPham](
	[MaSP] [char](1) NOT NULL,
	[TenSanPham] [nvarchar](500) NULL,
	[GiaBan] [float] NULL,
	[SLTon] [int] NULL,
	[Loai] [int] NULL,
 CONSTRAINT [PK_SanPham] PRIMARY KEY CLUSTERED 
(
	[MaSP] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON) ON [PRIMARY]
) ON [PRIMARY]
GO
INSERT [dbo].[LoaiSP] ([TenLoai], [MaLoai]) VALUES (N'Hàng tiêu dùng', 1)
GO
INSERT [dbo].[LoaiSP] ([TenLoai], [MaLoai]) VALUES (N'Điện máy', 2)
GO
INSERT [dbo].[LoaiSP] ([TenLoai], [MaLoai]) VALUES (N'Thực phẩm', 3)
GO
INSERT [dbo].[SanPham] ([MaSP], [TenSanPham], [GiaBan], [SLTon], [Loai]) VALUES (N'A', N'Kem đánh răng', 2000, 0, 1)
GO
INSERT [dbo].[SanPham] ([MaSP], [TenSanPham], [GiaBan], [SLTon], [Loai]) VALUES (N'B', N'Tàu hủ', 1000, 12, 3)
GO
ALTER TABLE [dbo].[SanPham] ADD  CONSTRAINT [DF_SanPham_GiaBan]  DEFAULT ((0)) FOR [GiaBan]
GO
ALTER TABLE [dbo].[SanPham]  WITH CHECK ADD  CONSTRAINT [FK_SanPham_LoaiSP] FOREIGN KEY([Loai])
REFERENCES [dbo].[LoaiSP] ([MaLoai])
GO
ALTER TABLE [dbo].[SanPham] CHECK CONSTRAINT [FK_SanPham_LoaiSP]
GO
ALTER TABLE [dbo].[SanPham]  WITH CHECK ADD  CONSTRAINT [CK_SanPham_GiaBan] CHECK  (([GiaBan]>=(1000)))
GO
ALTER TABLE [dbo].[SanPham] CHECK CONSTRAINT [CK_SanPham_GiaBan]
GO
ALTER TABLE [dbo].[SanPham]  WITH CHECK ADD  CONSTRAINT [CK_SanPham_SLTon] CHECK  (([SLTon]>=(0)))
GO
ALTER TABLE [dbo].[SanPham] CHECK CONSTRAINT [CK_SanPham_SLTon]
GO
USE [master]
GO
